tosca_definitions_version: tosca_simple_yaml_1_0

policy_types:
  radon.policies.testing.HttpEndpoint:
    derived_from: radon.policies.testing.TestCase
    properties:
      use_https:
        type: boolean
        required: true
        default: true
      method:
        type: string
        required: true
        default: GET
      hostname:
        type: string
        required: true
      port:
        type: integer
        required: true
        default: 80
      path:
        type: string
        required: true
      test_body:
        type: json
        required: false
      test_header:
        type: map
        entry_schema:
          type: string
        required: false
      expected_status:
        type: integer
        required: true
        default: 200
      expected_body:
        type: json
        required: false