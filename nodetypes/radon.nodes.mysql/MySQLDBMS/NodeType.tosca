tosca_definitions_version: tosca_simple_yaml_1_3

node_types:
  radon.nodes.mysql.MySQLDBMS:
    derived_from: radon.nodes.abstract.DBMS
    metadata:
      targetNamespace: "radon.nodes.mysql"
      abstract: "false"
      final: "false"
    properties:
      port:
        type: string
        default: 3306
      root_password:
        type: string
      component_version:
        type: string
        default: 5.6
    capabilities:
      host:
        occurrences: [ 1, UNBOUNDED ]
        valid_source_types: [ radon.nodes.mysql.MySQLDatabase ]
        type: tosca.capabilities.Compute
    interfaces:
      Standard:
        type: tosca.interfaces.node.lifecycle.Standard
        inputs:
          DBMS_VERSION:
            type: integer
            required: true
            default: { get_property: [ SELF, component_version ] }
          DBMS_PORT:
            type: integer
            required: true
            default: { get_property: [ SELF, port ] }
          DBMS_ROOT_PASSWORD:
            type: string
            required: true
            default: { get_property: [ SELF, root_password ] }
